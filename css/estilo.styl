a
  text-decoration: none

body
  font-family: 'Varela Round',sans-serif
  font-size: 16px

figure
  margin: 0
img
  vertical-align top
ul 
  margin 0
  padding 0
.border-bottom
  border-bottom: 1px solid #818181

.button-menu
  color: #333
  left: .5em
  margin-top: -10px
  position: absolute
  top: 50%

.container
  padding: 1.4rem
  font-size: 0
  text-align: center

.name
  color: #818181
.relative
  position: relative

.action
  color: #fff
  margin-right: .5em
  font-size: 1.2em
  &.gray
    color #333333
  &:last-child
    margin-right: 0

.autor
  color: #333333
  font-size 1.2em 
.center-block
  margin: 0 auto

.center-text
  text-align: center
.menu
  display none
.actions
  background: rgba(black,.3)
  bottom: 0
  left: 0
  position: absolute
  right: 0

.right-text
  text-align: right
.wrap
  width 1000px

.relative
  position: relative

.padding
  padding: 1em

.padding-tb
  padding 1em 0
.left
  float left
.right
  float right 
.progress
  margin 1em 0
  position relative
  .min
    font-size .8em 
    position absolute
    left 0
    top -5px
  .max
    font-size .8em
    position absolute
    right 0
    top -5px
  .total
    background #818181
    border-radius 5px
    height 5px
    margin 0 auto
    width 75%

  .state
    height 5px
    background rojo
    width 30%
    border-radius 5px
    position relative
    animacion(20s state infinite)

  .circle
    background #818181
    border-radius 50%
    height 10px
    position absolute
    right 0
    top -2px
    width 10px
    transformacion(1s circle infinite)
@keyframes state
  from
    width 0%
  to
    width 100%
@keyframes circle
  0%
    transform scale(1)
  100%
    transform scale(2)

.header
  height auto
  border none

.header .title
  font-size: 1.1em
  text-align: center
  margin: 0
  line-height: 3.5em

.song
  display: inline-block
  font-size: 1rem
  margin-bottom: 1em
  margin-right: 1em
  width: 8rem
  text-align: left
.song p
  margin: .5em 0

.playing
  
  &.small
    width: 20em
    margin 0 auto
.input
  border 1px solid #818181
  border-radius 5px
  height 2.5em
  padding 0 1em 0 2em
.search
  margin-right 1em
.search-icon
  position absolute
  left .5em
  top .8em
  color #818181
.close-icon
  position absolute
  top .5em
  color #818181
  right .5em
  font-size 1.2em
.playlist
  display none
.logo
  display none


@media screen and (min-width:480px)
  body 
    
  .song
    &:nth-child(even)
      margin-right 1em
  .image
    img 
      width 100%
      height auto
  .playing
    &.medium
      width auto

@media screen and (min-width:1000px)
  .button-menu
    display none
  .playing
    padding-top 2em
    &.large
      margin 0 auto
      width 62.5em
      overflow hidden
      padding-top 2em
  .menu
    display block
    background gris_mas_claro
    overflow hidden
    border-top 1px solid #818181
    .item
      float left
      list-style none
      a 
        color #333333
        cursor pointer
        display block
        padding 1em

        text-transform uppercase
        border-top 5px solid transparent
        &:hover
          border-top 5px solid #818181
  .music
    width 32.5em
    float left 
    .description
      display none
  .playlist
    display block
    width 22em
    padding 0 2em
    border-left 1px solid #818181
    .list
      list-style none
    .item 
      padding 1em 0
    .action
      font-size 14px

  .header
    .title
      display none
      
  .isotipo
    width 250px
  .logo
    padding 1.3em 0
    overflow hidden
    background white
    display block
  .avatar
    width 38px
    height 38px
  .round
    border-radius 50%
    overflow hidden
  .user-name
    color #333333
    margin-left .5em
    position relative
    top 9px
    &:after
      border-left 7px solid white
      border-right 7px solid  white
      border-top 9px solid #818181
      content ""
      display inline-block
      margin-left .4em


