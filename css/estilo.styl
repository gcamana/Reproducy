@import "normalize.css"
animacion(animation)
  -webkit-animation 20s state infinite
  -moz-animation 20s state infinite
  -o-animation 20s state infinite
  -ms-animation 20s state infinite
transformacion(animation)
  -webkit-animation 1s circle infinite
  -moz-animation 1s circle infinite
  -o-animation 1s circle infinite
  -ms-animation 1s circle infinite

rojo=#bd255b
gris_mas_claro=#EAE9E4
